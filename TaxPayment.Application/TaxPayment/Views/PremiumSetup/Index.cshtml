@model List<TaxPayment.Common.Premium.PremiumDetails>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div class="row">
    <div class="col-md-8">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Library</a></li>
                <li class="breadcrumb-item active" aria-current="page">Data</li>
            </ol>
        </nav>
    </div>
    <div class="col-md-3" style="margin-left:8%">
        <button type="button" class="btn" style="background-color:gainsboro" onclick="javascript:history.go(-1);"><i class="mdi mdi-arrow-left"></i> Back</button>
        <a asp-controller="PremiumSetup" asp-action="ManagePremiumSetup" class="btn btn-primary"><i class="mdi mdi-plus"></i>Add Premium Setup</a>
    </div>
</div>
<hr />
<section class="section-listing">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="nowrap" id="agentType">
                    <thead>
                        <tr>
                            <th>SN</th>
                            <th>Vechicle Category</th>
                            <th>Fiscal Year</th>
                            <th>Insurance Company</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</section>
