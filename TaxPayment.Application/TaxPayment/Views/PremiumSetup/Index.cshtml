@model List<TaxPayment.Common.Premium.PremiumViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div class="row">
    <div class="col-md-8">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Library</a></li>
                <li class="breadcrumb-item active" aria-current="page">Data</li>
            </ol>
        </nav>
    </div>
    <div class="col-md-3" style="margin-left:8%">
        <button type="button" class="btn" style="background-color:gainsboro" onclick="javascript:history.go(-1);"><i class="mdi mdi-arrow-left"></i> Back</button>
         <a asp-controller="PremiumSetup" asp-action="ManagePremiumSetup" class="btn btn-primary"><i class="mdi mdi-plus"></i>Add Premium Setup</a>
    </div>
</div>
<hr />
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="text-center">SN</th>
                    <th class="text-center">Vechicle Category</th>
                    <th class="text-center">Fiscal Year</th>
                    <th class="text-center">Insurance Company</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                <tr class="text-center">
                    @if (Model.Count != 0)
                        @foreach (var item in Model)
                        {
                            <td class="text-center">@item.RowNum</td>
                            <td class="text-center">@item.VechicleCategory</td>
                            <td class="text-center">@item.FiscalYear</td>
                            <td class="text-center">@item.InsuranceCompany</td>
                            <td class="text-center">@item.Status</td>
                            <td>
                                <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt"></i> </a>
                                <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash"></i> </a>
                            </td>
                        }
                    else
                    {
                        <td colspan="5">No Data Exists</td>
                    }
                </tr>
            </tbody>
        </table>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/Setup/PremiumSetup/premiumSetup.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            var premiumSetup = PremiumSetupManagement.premiumSetup();
            premiumSetup.renderIndex();
        });
    </script>
}

