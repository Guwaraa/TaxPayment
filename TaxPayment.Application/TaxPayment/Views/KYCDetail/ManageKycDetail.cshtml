@model TaxPayment.Common.KYCDetail.KYCViewModel
@{
    ViewData["Title"] = "ManageKycDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="section contact min-width" data-section="section6">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Kyc Form</h2>
                </div>
            </div>
            <div class="col-md-12">
                <form asp-controller="KYCDetail" asp-action="AddKycDetail" method="post" id="manage-KYCDetails-form" ,enctype="multipart/form-data">
                    <div class="title-kyc">General Information</div>
                    <div class="row">
                        <div class="col-md-4">
                            <fieldset>
                                <input asp-for="FirstName"
                                       type="text"
                                       class="form-control"
                                       placeholder="First Name" />
                                <span id="FirstName_jserror"></span>

                            </fieldset>
                        </div>
                        <div class="col-md-4">
                            <fieldset>
                                <input asp-for="MiddleName"
                                       type="text"
                                       class="form-control"
                                       placeholder="Middle Name" />
                                <span id="MiddleName_jserror"></span>

                            </fieldset>
                        </div>
                        <div class="col-md-4">
                            <fieldset>
                                <input asp-for="LastName"
                                       type="text"
                                       class="form-control"
                                       placeholder="Last Name" />
                                <span id="LastName_jserror"></span>

                            </fieldset>
                        </div>
                        <div class="col-md-4">
                            <fieldset>
                                <input asp-for="DateOfBirth"
                                       type="text"
                                       class="form-control"
                                       placeholder="Date of Birth" />
                                <span id="DateOfBirth_jserror"></span>

                            </fieldset>
                        </div>
                        <div class="col-md-4">
                            <fieldset>
                                <input asp-for="ContactNumber"
                                       type="text"
                                       class="form-control"
                                       placeholder="Contact Number" />
                                <span id="CurrentAddress_jserror"></span>

                            </fieldset>
                        </div>
                        <div class="col-md-4">
                            <fieldset>
                                <select class="form-control dropdown" asp-for="Gender" style="background-color: #414B5C; color: #fff;" id="sel1">
                                    <option>Gender</option>
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Other</option>
                                </select>
                                <span id="Gender_jserror"></span>
                            </fieldset>
                        </div>
                        <div class="col-md-6">
                            <fieldset>
                                <input asp-for="CurrentAddress"
                                       type="text"
                                       class="form-control"
                                       placeholder="Current Address" />
                            </fieldset>
                        </div>
                        <div class="col-md-6">
                            <fieldset>
                                <input asp-for="ParmanentAddress"
                                       type="text"
                                       class="form-control"
                                       placeholder="Pernament Address" />
                                <span id="ParmanentAddress_jserror"></span>

                            </fieldset>
                        </div>
                    </div>
                    <div class="title-kyc">Citizenship Information</div>
                    <div class="row">
                        <div class="col-md-4">
                            <fieldset>
                                <input asp-for="CitizenshipNumber"
                                       type="text"
                                       class="form-control"
                                       placeholder="Citizenship Number" />
                                <span id="CitizenshipNumber_jserror"></span>

                            </fieldset>
                        </div>

                        <div class="col-md-4">
                            <fieldset>
                                <input asp-for="FrontImage"
                                       type="file"
                                       class="form-control"
                                       id="image"
                                       style="display:none;" />
                                <label for="image" class="file-selector">Upload your photo</label>

                            </fieldset>
                        </div>

                        <div class="col-md-4">
                            <fieldset>
                                <input asp-for="BackImage"
                                       type="file"
                                       class="form-control"
                                       id="image"
                                       style="display:none;" />
                                <label for="image" class="file-selector">Upload your photo</label>

                            </fieldset>
                        </div>
                    </div>
                    <div class="pay-now-btn">
                        <button type="submit">Submit Kyc</button>
                        <input type="hidden" asp-for="UserId" />
                    </div>
                </form>
            </div>
        </div>
    </div>


</section>
@section scripts{
    <script src="~/Scripts/Setup/kycDetail.js" type="text/javascript"></script>
    <partial name="_AlertPartial" />
    <script type="text/javascript">
        $(function () {
            var kycDetailManagement = KycDetailManagement.kycDetail();
            kycDetailManagement.renderManage();
        });
    </script>
    }