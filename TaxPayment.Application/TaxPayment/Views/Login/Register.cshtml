@model TaxPayment.Common.User.UserViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}
<section class="section contact min-width " data-section="section6">
    <section class="vh-100 ">
        <div class="container py-5 h-100 overflow">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                         class="img-fluid" alt="Phone image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    <form asp-controller="Login" asp-action="Register" method="post" id="manage-register-form" >
                        <div class="divider d-flex align-items-center my-4 flex-center">
                            <p class="sign-in-title">Sign Up</p>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="FullName"
                                   type="text"
                                   class="form-control"
                                   id="name"
                                   placeholder="Full Name"
                                   required="" />
                        </div>
                        <div class="form-outline mb-4">
                            <input asp-for="UserName"
                                   type="text"
                                   class="form-control"
                                   id="name"
                                   placeholder="User Name"
                                   required="" />
                        </div>
                        <div class="form-outline mb-4">
                            <input asp-for="Email"
                                   type="text"
                                   class="form-control"
                                   id="email"
                                   placeholder="Email"
                                   required="" />
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="PhoneNumber"
                                   type="text"
                                   class="form-control"
                                   id="number"
                                   placeholder="Phone Number"
                                   required="" />
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="Password"
                                   type="password"
                                   class="form-control"
                                   id="password"
                                   placeholder="Password"
                                   required="" />
                        </div>

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Sign up</button>

                        <div class="d-flex justify-content-around align-items-center my-4">

                            <a asp-controller="Login" asp-action="Login">Already Have a account?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</section>
